				},
				{
					"namespace": "magazine"
				},
				{
					"namespace": "event"
				},
				{
					"namespace": "publisher"
				},
				{
					"name": [
						"vanilla",
						"ntr"
					],
					"ignore_case": true
				},
				{
					"name": [
						"comedy"
					]
				}
			],
			"use_default_tag_weight": true,
			"use_default_tag_exclude": true
		}
	},
	"image": {
		"thumbnail_preset": "980p",
		"aspect_ratio_similar": true,
		"remove_on_update": true,
