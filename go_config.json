{
	"directories": {
		"content": "./content",
		"images": "./images"
	},
	"database": {
		"vendor": "sqlite",
		"config": {
			"path": "db.sqlite"
		}
	},
	"server": {
		"auto_unpack": false
	},
	"site": {
		"site_name": "Faccina",
		"enable_users": true,
		"enable_collections": true,
		"enable_read_history": true,
		"admin_users": [
			"fermin"
		],
		"default_sort": "released_at",
		"default_order": "desc",
		"guest_access": true,
		"guest_downloads": true,
		"client_side_downloads": true,
		"search_placeholder": "tag:vanilla -tag:illustration",
		"secure_session_cookie": false,
		"admin": {
			"delete_require_confirmation": true
		},
		"gallery_listing": {
			"page_limits": [
				6,
				12,
				24,
				48
			],
			"default_page_limit": 12,
			"tag_weight": [
				{
					"namespace": "artist",
					"weight": 1000
				},
				{
					"namespace": "circle",
					"weight": 999
				},
				{
					"namespace": "parody",
					"weight": 998
				},
				{
					"name": [
						"vanilla"
					],
					"weight": 100
				},
				{
					"name": [
						"comedy",
						"love hotel"
					],
					"weight": 150
				}
			],
			"tag_exclude": [
				{
					"name": [
						"original",
						"original work"
					],
					"namespace": "parody",
