{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "paths": {
      "~": [
        "./"
      ],
      "~/*": [
        "./*"
      ]
    }
  },
  "include": [
    "components/**/*.svelte",
    "app.d.ts",
    "models.ts",
    "utils.ts"
  ],
}